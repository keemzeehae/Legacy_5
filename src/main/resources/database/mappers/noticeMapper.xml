<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.keem.s1.notice.NoticeDAO">

	<select id="detail" parameterType="com.keem.s1.notice.NoticeDTO" resultType="com.keem.s1.notice.NoticeDTO" >
		SELECT * FROM NOTICE WHERE NUM=#{num}
	</select>

	<select id="list" resultType="com.keem.s1.notice.NoticeDTO" >
		SELECT * FROM NOTICE
	</select>

	<insert id="add" parameterType="com.keem.s1.notice.NoticeDTO" >
		INSERT INTO NOTICE
		VALUES (NOTICE_SEQ.NEXTVAL, #{title},#{contents},#{writer},SYSDATE,#{hit})
	</insert>
	
	<delete id="delete" parameterType="com.keem.s1.notice.NoticeDTO">
		DELETE NOTICE WHERE NUM=#{num}
	</delete>
	
</mapper>
